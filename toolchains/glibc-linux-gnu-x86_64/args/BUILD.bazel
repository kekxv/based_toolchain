load("@rules_cc//cc/toolchains:args.bzl", "cc_args")
load("@rules_cc//cc/toolchains/args:sysroot.bzl", "cc_sysroot")

cc_sysroot(
    name = "linux_sysroot",
    data = [
        "@gcc-linux-x86_64//:builtin_headers",
        "@gcc-linux-x86_64//:sysroot",
    ],
    sysroot = "@gcc-linux-x86_64//:sysroot",
    visibility = ["//visibility:public"],
)

cc_args(
    name = "default_cpp_compile",
    actions = [
        "@rules_cc//cc/toolchains/actions:cpp_compile_actions",
    ],
    args = [
        "-std=c++17",
        "-lstdc++",
    ],
    visibility = ["//visibility:public"],
)

cc_args(
    name = "default_c_compile",
    actions = [
        "@rules_cc//cc/toolchains/actions:cpp_compile_actions",
        "@rules_cc//cc/toolchains/actions:c_compile",
    ],
    args = [
        # Common C/C++ flags
        "-fno-canonical-system-headers",
        "-no-canonical-prefixes",
        "-Wno-builtin-macro-redefined",
        "-D__DATE__=\"redacted\"",
        "-D__TIMESTAMP__=\"redacted\"",
        "-D__TIME__=\"redacted\"",
        "-fPIC",  # Apply to all compile actions via compiler_flags if desired
    ],
    visibility = ["//visibility:public"],
)

cc_args(
    name = "default_link",
    actions = [
        "@rules_cc//cc/toolchains/actions:cpp_compile_actions",
        "@rules_cc//cc/toolchains/actions:c_compile",
        "@rules_cc//cc/toolchains/actions:link_executable_actions",
        "@rules_cc//cc/toolchains/actions:link_actions",
    ],
    args = [
        "-lm",
        "-lpthread",
        "-ldl",
        "-lc",
        "-lstdc++",
        #"-static-libgcc",
        #"-static-libstdc++",
    ],
    visibility = ["//visibility:public"],
)
